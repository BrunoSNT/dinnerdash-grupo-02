<%= render  "layouts/painel_categories" %>
<%= render  "nav_meals" %>
<div class="container content font">
		<div class ="new_cat">Nova refeição</div>
<form>
  <div class="form-row">
    <div class="form-group col-md-6">
      <input type="name" class="form-control" id="mealName" placeholder="Nome">
    </div>
        <div class="form-group col-md-4">
      <select id="inputCategory" class="form-control">
        <option selected>Categoria</option>
        <option>...</option>
      </select>
    </div>
  </div>
  <div class="form-row justify-content-start">
      <div class="form-group col-md-2">
        <input type="text" class="form-control" id="inputPrice " placeholder="Preço">
    </div>
        <div class="form-group col-md-8 custom-file">
        <input type="file" class="custom-file-input" id="validatedCustomFile" required>
        <label class="custom-file-label" for="validatedCustomFile">Escolha um arquivo...</label>
    </div>
  </div>
  <div class="form-row">
    <div class="form-group col-md-6">
        <label for="exampleFormControlTextarea1">Descrição</label>
        <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
    </div>
         <div class="form-check col-md-2 mt-4 mr-3 ml-4 align-middle">
             <input class="form-check-input" type="checkbox" id="gridCheck">
            <label class="form-check-label" for="gridCheck">
                 Disponivel?
            </label>
            <button type="submit" class="btn btn-primary mt-4">Sign in</button>
        </div>
</form>


        <%= form_with model: @meal do |form| %>
            <label class = "labels">Nome</label>
            <div class ="input"><%= form.text_field :name%></div>
            <label class = "labels">Descrição</label>
            <div class ="input"><%= form.text_field :description%></div>
            <label class = "labels">Categoria</label>
            <div class = "labels"><%= form.select :category_id, @categories.collect { |category| [category.name, category.id] }%></div>
            <label class = "labels">Preço</label>
            <div class ="input"><%= form.text_field :price%></div>
            <label class = "labels">Imagem</label>
            <div class ="input custom-file"><%= form.file_field :image%></div>
            <label class = "labels">Disponibilidade</label>
            <div class ="input"><%= form.check_box :available%></div>
      

			<button class = "btn btn-success botao space"><% form.submit %>criar refeição</button><button class = "btn botao voltar"><%= link_to  "voltar", meals_path %> </button>
        <% end %>
</div>