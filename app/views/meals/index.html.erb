
    <header class="container-fluid header_backoffice text-white font">
    <div class="painel">
	<header class="upper_header">
		<label class="upper_h2">dinnerdash</label>
		<span><label class="float-right ">entrar</label>
		<label class="upper_header float-right ">cadastro</label></span>
		</header>

        <header class="lower_header fixed-bottom">
            <h1 class="home_title"s>Backoffice</h1>
            <h3 class="home_subtitle">Gerencie pedidos, refeições e mais.</h3>
        </header>
        </div>
    </header>
    <nav class="navbar navbar-expand-lg navbar navbar-dark bg-dark nav">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
            <div class="navbar-nav nav_meal">
                <span class="nav-item nav-link" href="#">Pedidos <span class="sr-only">(current)</span></span>
                <span class="nav-item nav-link" href="#">Usuários</span>
                <span class="nav-item nav-link active" href="#">Refeições</span>
                <span class="nav-item " href="#"><%= link_to  "Categorias de Refeição", categories_path, class: "nav-link" %></span>
            </div>
        </div>
    </nav>
    <div class="container font">
	<%@categories.each do |category| %>
		<% i = quantidade(category) %>
		<% if i > 0 %>
			<h1 class = "category_name"><b><%=category.name%><b></h1>
			<div class = "d-flex flex-row contain">	
				<%@meals.each do |meal|%>
					<%if(meal.category_id == category.id)%>
						<div class="card cards_backoffice">
							<%= image_tag(meal.image, class: "card-img-top")%>
								<div class = "card-img-overlay over_backoffice">
									<h6 class="card-title meal_name_backoffice"><span class = "espaco_name"><%= meal.name %></span></h6>
								</div>
							<div class="card-body position-relative">
								<h5 class="card-text description position-relative"><%= meal.description %></h5>
								<h5 class="text-success">R<%=number_to_currency(meal.price) %> por porção </h5>
								<div class = "d-flex flex-row justify-content-between flex_bot">
                                <%= button_to  "Editar", edit_meal_path(meal), :method => "get", class: "btn btn-warning botoes_ref editar" %> 
                                <%= button_to  "Excluir", meal, method: :delete, data: { confirm: 'você tem certeza?'}, class: "btn btn-danger botoes_ref exc"  %>
                            </div>
							</div>
						</div>
					<% end %>
				<% end %>
		<% end %>
		</div>
	<% end %>
            <%= button_to "criar nova refeição", new_meal_path, :method => "get", class: "btn btn-success" %>
</div>

