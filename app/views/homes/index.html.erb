<%= render  "layouts/painel_homes" %>
<div class="container">
	<%@categories.each do |category| %>
		<% i = quantidade(category) %>
		<% if i > 0 %>
			<h1 class = "category_name"><%=category.name%></h1>
			<div class = "d-flex flex-row contain">	
				<%@meals.each do |meal|%>
					<%if(meal.category_id == category.id)%>
						<div class="card cards">
							<%= image_tag(meal.image, class: "card-img-top")%>
								<div class = "card-img-overlay over position-absolute">
									<h6 class="card-title meal_name"><span class = "espaco_name"><%= meal.name %></span></h6>
								</div>
							<div class="card-body position-relative">
								<h5 class="card-text description position-relative"><%= meal.description %></h5>
								<h5>R<%=number_to_currency(meal.price) %> por porção </h5>
								<h6>Quantidade</h6>
								<a href="#" class="btn btn-success">Go somewhere</a>
							</div>
						</div>
					<% end %>
				<% end %>
		<% end %>
		</div>
	<% end %>
</div>
<div>
     <footer class = "footer position-relative font">
        <span class="footer_left_credits"><b>dinnerdash</b> | todos os direitos reservados</span>
        <span class="footer_right_credits">design e beckend <b>Bruno Sanguinetti</b> e <b>Yuri Silva</b></span>
    </footer>
</div>