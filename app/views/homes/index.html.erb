    <div class = "img_root">
		<div class = "painel container-fluid">

			<div class = "text-white d-flex flex-grow justify-content-between flex-shrink"> 
				<span class="small_logo">Dinnerdash</span>
				<span class="d-flex">
					<label class="small_text">entrar</label>
					<label class="small_text">cadastro</label>
				</span>
			</div>
			<div class="container">
				<h1 class = "text-white font-weight-normal home_title h1">Monte o seu prato</h1>
				<h3 class = "text-white font-weight-light home_subtitle h3">Escolha sua salada, molho, prato principal, guarnição e bebida</h3>
			</div>	
		</div>	
	<div class = "container teste">
		<%@categories.each do |category| %>
			<h1 class = "category_name"><%=category.name%></h1>
			<div class = "d-flex flex-row contain">	
				<%@meals.each do |meal|%>
					<%if(meal.category_id == category.id)%>
						<div class="card cards">
						<%= image_tag(meal.image, class: "card-img-top")%>
							<div class = "card-img-overlay d-flex align-items-center over">

								<h6 class="card-title meal_name"><span class = "espaco_name"><%= meal.name %></span></h6>
							</div>
							<div class="card-body">
								<h5 class="card-text description"><%= meal.description %></h5>
								<h5>R<%=number_to_currency(meal.price) %> por porção </h5>
								<h6>Quantidade</h6>
								<a href="#" class="btn btn-success">Go somewhere</a>
							</div>
						</div>
					<% end %>
				<% end %>
			</div>
		<% end %>
	</div>




    

    <div class = "footer fot">
        <span class = "fotd">dinnerdash | todos os direitos reservados</span><span class = "develop">Design por Yuri Silva, Backend por Bruno Sanguinetti</span>
    </div>
</div>