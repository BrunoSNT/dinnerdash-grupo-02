<div class = "d-flex flex-column cont">
    <div class = "img_root">
        <div class = "escurinho">
            <div class = "whi">dinnerdash</div>
            <span class = "top-right"><span class = "top-r yellow">backoffice</span><span class = "top-r">perfil</span><span class = "top-r">sair</span></span>
            <div class = "Back">Backoffice</div>
            <div class = "ger">Gerencie pedidos, refeições e mais</div>
        </div>
    </div>
	<%@categories.each do |category| %>
		<h1><%=category.name%></h1>
	<div class = "d-flex flex-row">	
		<%@meals.each do |meal|%>
			<%if(meal.category_id == category.id)%>
				<div class="card" style="width: 18rem;">
				<%= image_tag(meal.image, class: "card-img-top")  %>
					<div class="card-body">
						<h1 class="card-title"><%= meal.name %></h1>
						<p class="card-text"><%= meal.description %></p>
						<a href="#" class="btn btn-primary">Go somewhere</a>
					</div>
				</div>

			<% end %>
		<% end %>
	</div>
	<% end %>



    

    <div class = "footer">
        <span class = "fotd">dinnerdash | todos os direitos reservados</span><span class = "develop">Design por Yuri Silva, Backend por Bruno Sanguinetti</span>
    </div>
</div>